#:kivy 1.0.9
<GUIWidget>:
    display: display
    add: add_button
    subtract: subtract_button
    status: status_bar
    mission: mission_bar
    map: map_widget
    draw_checkbox: draw_on_map_checkbox
    draw_label: draw_on_map_label
    console: console_
    rows: 2
    cols: 2
    BoxLayout:
        orientation: "vertical"
        AddButton:
            id: add_button
            on_release: root.add_one(add_button.increment_value)
        SubtractButton:
            id: subtract_button
            on_release: root.subtract_one(subtract_button.decrement_value)
        StatusBar:
            id: status_bar
        MissionBar:
            id: mission_bar
        Button: 
            text: "Clear"
            on_release: root.clear_canvas()
        BoxLayout:
            orientation: "horizontal"
            Label: 
                id: draw_on_map_label
                text: "Draw on map"
            CheckBox:
                id: draw_on_map_checkbox
                on_press: root.check_box_pressed(draw_on_map_label.text, draw_on_map_checkbox.active)
    BoxLayout:
        orientation: "vertical"
        MapWidget:
            id: map_widget   
    BoxLayout:
        orientation: "vertical"
        ConsoleWidget:
            id: console_
    BoxLayout:
        orientation: "vertical"
        Label:
            id: display
            font_size: dp(50)
            text: '0'
    